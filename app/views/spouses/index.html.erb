<p id="notice"><%= notice %></p>

<h1>Listing Spouses</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Date of birth</th>
      <th>Gender</th>
      <th>Anniversary</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spouses.each do |spouse| %>
      <tr>
        <td><%= spouse.first_name %></td>
        <td><%= spouse.last_name %></td>
        <td><%= spouse.date_of_birth %></td>
        <td><%= spouse.gender %></td>
        <td><%= spouse.anniversary %></td>
        <td><%= spouse.employee_id %></td>
        <td><%= link_to 'Show', spouse %></td>
        <td><%= link_to 'Edit', edit_spouse_path(spouse) %></td>
        <td><%= link_to 'Destroy', spouse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

